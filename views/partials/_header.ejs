<header>
  <nav class="navbar navbar-expand-lg navbar-dark">
    <a class="navbar-brand" href="/">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>


      <% if (!user) { %>

      <a class="nav-item nav-link" href="/register">Register</a>
      <a class="nav-item nav-link" href="/login">Login</a>

      <!-- When user logged -->
      <% } else { %>
      <p class="mr-3 mt-2 mb-2 logged">Logged In As: <%= user.email %></p>
      <form class="logout" action="/logout" method="POST">
        <button type="submit" class="logout-btn btn btn-outline-light">Logout</button>
      </form>
      <% } %>
    </div>

  </nav>
</header>

<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>

    <% if (!userID) { %>

    <div class="d-flex justify-content-end">
      <a class="nav-item nav-link" style="color: white" href="/register"
        >Register</a
      >
      <a class="nav-item nav-link" style="color: white" href="/login">Login</a>
    </div>

    <% } else { %>
    <p class="mr-3 mt-2 mb-2">Logged In As: <%= userID.email %></p>
    <form action="/logout" method="POST">
      <button type="submit" class="btn btn-outline-light">Logout</button>
    </form>
    <% } %>
  </nav>
</header>
